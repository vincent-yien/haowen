<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/episode_bg_focus"
    android:layout_marginTop="@dimen/dimen_8px"
    android:layout_marginBottom="@dimen/dimen_8px"
    >

    <ImageView
        android:id="@+id/article_list_pic"
        android:layout_width="@dimen/dimen_600px"
        android:scaleType="centerCrop"
        android:layout_height="@dimen/dimen_600px"/>
    
    <TextView
        android:id="@+id/article_list_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/dimen_90px"
        android:layout_toEndOf="@id/article_list_pic"
        android:layout_marginTop="@dimen/dimen_50px"
        android:layout_marginStart="@dimen/dimen_20px"
        android:textColor="@color/black"
        android:maxLines="2"
        android:ellipsize="end"/>

</RelativeLayout>